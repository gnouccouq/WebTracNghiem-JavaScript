<body class="sub_page">
  <div class="top_container ">
    <!-- header section strats -->
    <%- include('partical/menuadmin'); %>
  </div>
  <!-- end header section -->

  <div class="common_style">
    <!-- why section -->
    <section class="why_section">
        <section class="about_section">
            <div class="container">
              <div class="row">
                <div class="col-md-6">
                  <div class="about_img-container">
                    <img src="images/about.png" alt="">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="about_detail-box">
                    <h3>
                      Add Lesson
                    </h3>
                    <p>
                      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
                      dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip
                      ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate
                    </p>
                    <div class="">
                      <a href="formadd.ejs" class="call_to-btn btn_white-border">
                        Add Lesson
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        <div class="container mt-4 p-4">
            <div class="row row-cols-1 row-cols-md-2">
                <% units.forEach((unit) => { %>
                    <div class="col-lg-4 col-sm-6 mb-4">
                        <form class="card" method="GET" action="/exam/<%= unit.slug%>">
                            <img src="./images/<%= unit.background %>" class="card-img-top" alt="./EnglishIT1.jpg">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= unit.name%>
                                </h5>
                                <p class="card-text">
                                    <%= unit.description %>
                                </p>
                                <p class="card-text">
                                    <%= unit.number %><a> sentences</a>
                                </p>
                                <a href="/formupdate/<%= unit._id%>" class="btn btn-outline-primary">Update</a>
                                <a href="/formdelete/<%= unit._id%>" class="btn btn-outline-primary">Delete</a>
                    
                            </div>
                        </form>
                    </div>
                    <%})%>
            </div>
        </div>
    </section>


    <!-- end why section -->

  </div>


  <!-- info section -->


</body>

</html>